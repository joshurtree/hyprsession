{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug hyprsession",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hyprsession",
                    "--package=hyprsession"
                ],
                "filter": {
                    "name": "hyprsession",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug hyprsession with args",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hyprsession",
                    "--package=hyprsession"
                ],
                "filter": {
                    "name": "hyprsession",
                    "kind": "bin"
                }
            },
            "args": ["--help"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=hyprsession",
                    "--package=hyprsession"
                ],
                "filter": {
                    "name": "hyprsession",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        }
    ]
}